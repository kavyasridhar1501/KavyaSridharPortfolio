{
  "name": "simple-portfolio-template",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "export": "next export",
    "preview": "npx serve out",               // optional local preview of 'out/'
    "start": "next start",                    // only used if you ever SSR locally
    "lint": "next lint",
    "deploy:gh": "npm run build && npm run export && touch out/.nojekyll && git checkout -B gh-pages && git --work-tree out add --all && git --work-tree out commit -m \"Deploy\" || true && git push origin HEAD:gh-pages --force && git checkout -"
  },
  "dependencies": {
    "next": "15.1.6",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "framer-motion": "^12.0.6"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.1.6",
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "typescript": "^5"
  }
}
